<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popbg"
    android:backgroundTint="@color/popupbg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/bt_popup_day"
        android:clickable="true"
        style="@style/PopupWindow_TextView_bg"
        android:text="按天显示" />
    <TextView
        android:id="@+id/bt_popup_month"
        android:clickable="true"
        style="@style/PopupWindow_TextView_bg"
        android:text="按月显示"/>
    <TextView
        android:id="@+id/bt_popup_year"
        android:clickable="true"
        style="@style/PopupWindow_TextView_bg"
        android:text="按年显示"/>
    <TextView
        android:id="@+id/bt_popup_filter_name"
        android:clickable="true"
        style="@style/PopupWindow_TextView_bg"
        android:text="名称查找"/>
    <TextView
        android:id="@+id/bt_popup_filter_time"
        android:clickable="true"
        style="@style/PopupWindow_TextView_bg"
        android:text="时间查找"/>
    <TextView
        android:id="@+id/bt_popup_cancel"
        android:clickable="true"
        style="@style/PopupWindow_TextView_bg"
        android:text="取消"/>

</LinearLayout>